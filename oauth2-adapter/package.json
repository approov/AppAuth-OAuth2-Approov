{
  "name": "oauth2-approov-adapter",
  "version": "1.0.0",
  "description": "Adapts OAuth2 protocol to use Approov client attestation rather than vulnerable client secret",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "build": "babel src -d dist --ignore \"**/*.test.js\"",
    "clean": "rimraf ./dist && mkdir dist",
    "serve": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "OAuth2",
    "Approov",
    "OpenID-Connect",
    "OIDC",
    "Mobile",
    "Android"
  ],
  "author": "Skip Hovsmith",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^0.27.2",
    "chalk": "^3.0.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.0"
  }
}
